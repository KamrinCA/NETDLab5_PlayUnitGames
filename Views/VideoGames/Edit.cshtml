@model NETDLab5.Models.VideoGame

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Video Game</h1>

<!-- Using DisplayFor to display the video game's title in the h4 tag -->
<h4>Edit @Html.DisplayFor(model => model.name)'s Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Create a form for editing Video games currently in the database -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="videoGameID" />
            <div class="form-group">
                <!-- Every label has been updated to make form labels capitalized and more meaningful -->
                <label asp-for="name" class="control-label">Title</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="developer" class="control-label">Developer</label>
                <input asp-for="developer" class="form-control" />
                <span asp-validation-for="developer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="publisher" class="control-label">Publisher</label>
                <input asp-for="publisher" class="form-control" />
                <span asp-validation-for="publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="yearOfRelease" class="control-label">Year of Release</label>
                <input asp-for="yearOfRelease" class="form-control" />
                <span asp-validation-for="yearOfRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="platform" class="control-label">Platform</label>
                <input asp-for="platform" class="form-control" />
                <span asp-validation-for="platform" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isNew" /> New
                </label>
            </div>
            <div class="form-group">
                <label asp-for="storeID" class="control-label">Store ID</label>
                <select asp-for="storeID" class="form-control" asp-items="ViewBag.storeID"></select>
                <span asp-validation-for="storeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link for returning back to list of video games -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
