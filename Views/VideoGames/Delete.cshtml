@model NETDLab5.Models.VideoGame

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Video Game</h1>

<!-- Using DisplayFor to display the video game's title in the h3 tag -->
<h3>Are you sure you want to delete @Html.DisplayFor(model => model.name)?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <!-- Every data term (label/name) has been capitalized and/or changed to be more meaningful -->
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Developer:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.developer)
        </dd>
        <dt class="col-sm-2">
            Publisher:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.publisher)
        </dd>
        <dt class="col-sm-2">
            Year of Release:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.yearOfRelease)
        </dd>
        <dt class="col-sm-2">
            Platform:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.platform)
        </dd>
        <dt class="col-sm-2">
            New:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isNew)
        </dd>
        <dt class="col-sm-2">
            Store ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.store.storeID)
        </dd>
    </dl>

    <!-- Displays the delete button -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="videoGameID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
