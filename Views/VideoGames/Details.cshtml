@model NETDLab5.Models.VideoGame

@{
    ViewData["Title"] = "Details";
}

<h1>Video Game Details</h1>

<div>
    <!-- Using DisplayFor to display the video game's title in the h4 tag -->
    <h4>View or Edit the current details of @Html.DisplayFor(model => model.name)</h4>
    <hr />
    <dl class="row">
        <!-- Every data term (label/name) has been capitalized and/or changed to be more meaningful -->
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Developer:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.developer)
        </dd>
        <dt class="col-sm-2">
            Publisher:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.publisher)
        </dd>
        <dt class="col-sm-2">
            Year of Release:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.yearOfRelease)
        </dd>
        <dt class="col-sm-2">
            Platform:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.platform)
        </dd>
        <dt class="col-sm-2">
            New:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isNew)
        </dd>
        <dt class="col-sm-2">
            Store ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.store.storeID)
        </dd>
    </dl>
</div>

<!-- Edit and Back to list links -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.videoGameID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
