@model NETDLab5.Models.VideoGameConsole

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Console</h1>

<!-- Using DisplayFor to display the video game's title in the h3 tag -->
<h3>Are you sure you want to delete this @Html.DisplayFor(model => model.name)?</h3>
<div>
    <h4>VideoGameConsole</h4>
    <hr />
    <dl class="row">
        <!-- Every data term (label/name) has been capitalized and/or changed to be more meaningful -->
        <dt class="col-sm-2">
            Brand:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.brand)
        </dd>
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Manufacturer:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.manufacturer)
        </dd>
        <dt class="col-sm-2">
            New:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isNew)
        </dd>
        <dt class="col-sm-2">
            Store ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.store.storeID)
        </dd>
    </dl>

    <!-- Displays the delete button -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="videoGameConsoleID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
