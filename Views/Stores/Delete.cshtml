@model NETDLab5.Models.Store

@{
    ViewData["Title"] = "Delete";
}

<!-- Using DisplayFor to display the store's ID in the h1 tag -->
<h1>Delete Store #@Html.DisplayFor(model => model.storeID)</h1>

<h3>Are you sure you want to delete this store?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <!-- Every data term (label/name) has been capitalized and/or changed to be more meaningful -->
        <dt class="col-sm-2">
            Country:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.country)
        </dd>
        <dt class="col-sm-2">
            City:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class="col-sm-2">
            Postal Code:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.postalCode)
        </dd>
    </dl>

    <!-- Displays the delete button -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="storeID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
